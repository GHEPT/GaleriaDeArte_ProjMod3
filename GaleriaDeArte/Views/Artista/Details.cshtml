@model GaleriaDeArte.Models.Artista

@{
    ViewData["Title"] = "Visualizar";
}

<h1>Visualizando @Model.Nome</h1>

<div>
    <h4>Artista</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">         
        </dt>
        <dd class = "col-sm-10">
            <img src=@Model.Imagem class="img-fluid rounded-start" alt="" /> 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patrimonio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patrimonio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Atualizar</a> |
    <a asp-action="Index">Voltar</a>
</div>
