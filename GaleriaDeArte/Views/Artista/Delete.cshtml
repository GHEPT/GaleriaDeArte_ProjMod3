@model GaleriaDeArte.Models.Artista

@{
    ViewData["Title"] = "Deletar";
}

<h1>Excluir artista</h1>

<h3>Você tem certeza que deseja excluir <span class="text-danger">@Model.Nome?</span></h3>
<br />
<br />
<div>        
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="Index">Voltar</a>
    </form>
</div>
